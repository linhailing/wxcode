/* pages/game/game.wxss */
.ad{
  width: 100%;
  height: 150px;
  margin-bottom: 10rpx;
}
.ad .ad-img{
  width: 100%;
  height: 100%;
}
.content{
  background: #fff;
  overflow: hidden;
}
.content .title{
  font-size: 16px;
  color: #333;
  margin: 8px 10px;
}
.content .c-list{
  margin: 0 10px;
}
.content .c-list .c-item{
   width: 33.33%;
   float: left;
   margin-bottom: 10px;
}
.content .c-list .c-item .c-link{
  margin-right: 8px;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1px solid #fe4414;
   border-radius: 10px;
   box-shadow: 0px 1px #fe4414;
}
.content .c-list .c-item .c-link .c-img{
  height: 90px;
  width: 95%;
  margin: 5px 0;
}
.content .c-list .c-item .c-link .c-name{
  font-size: 18px;
  color: #333;
}
.content .c-list .c-item .c-link .c-play{
  margin-top: 5px;
  font-size: 14px;
  color: #ff4114;
  margin-bottom: 5px;
}